<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="220dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rlty_head"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:background="@color/color929398"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="26dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/fresco"
            android:layout_width="60dp"
            fresco:placeholderImage="@mipmap/ic_default_head"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            fresco:actualImageScaleType="focusCrop"
            fresco:fadeDuration="200"
            fresco:placeholderImageScaleType="focusCrop"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/fresco"
            android:text="陈奕迅"
            android:textColor="@color/colorFFFFFF"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llty_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="3dp"
            android:src="@mipmap/ic_individual_order" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="我的订单"
            android:textColor="@color/colorFFFFFF"
            android:textSize="13sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llty_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="3dp"
            android:src="@mipmap/ic_individual_balance" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="我的余额"
            android:textColor="@color/colorFFFFFF"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_circle"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_circle_f37a30" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llty_invite_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="3dp"
            android:src="@mipmap/ic_individual_invite_friends" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="邀请好友"
            android:textColor="@color/colorFFFFFF"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llty_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="3dp"
            android:src="@mipmap/ic_individual_settings" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="系统设置"
            android:textColor="@color/colorFFFFFF"
            android:textSize="13sp" />
    </LinearLayout>


</LinearLayout>